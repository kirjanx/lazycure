
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@color/black"
        android:color="@color/yellow" >
 >

        <TextView
            android:id="@+id/split_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:textColor="@color/yellow"
            android:text="@string/split_message"/>

        <Button
            android:id="@+id/split_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:text="@string/split_button" />

        <EditText
            android:id="@+id/split_first_activity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/split_timer"
            android:layout_below="@+id/split_hint"
            android:ems="10" />

        <TextView
            android:id="@+id/split_hint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/split_message"
            android:layout_centerHorizontal="true"
            android:text="@string/split_first_activity_time_message"
            android:textColor="@color/yellow" />

        <TimePicker
            android:id="@+id/split_timer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/split_second_activity"
            android:layout_below="@+id/split_first_activity"
            android:gravity="center">
            <requestFocus />
        </TimePicker>

        <EditText
            android:id="@+id/split_second_activity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/split_timer"
            android:layout_centerHorizontal="true"
            android:ems="10" />

    </RelativeLayout>
